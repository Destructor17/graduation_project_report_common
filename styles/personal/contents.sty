%%% Подподразделы(\subsubsection) не выводим в содержании
\setcounter{tocdepth}{2}

\renewcommand{\l@section}[2]{\@dottedtocline{1}{0em}{24pt}{#1}{#2}}
\renewcommand{\l@subsection}[2]{\@dottedtocline{1}{0em}{24pt}{#1}{#2}}
\renewcommand{\l@subsubsection}[2]{\@dottedtocline{1}{0em}{24pt}{#1}{#2}}

\let\stdsection\section
\renewcommand\section{\newpage\stdsection}

\ESKDsectSkip{section}{10mm}{10mm}
\ESKDsectSkip{subsection}{10mm}{10mm}
\ESKDsectSkip{subsubsection}{10mm}{10mm}

% Загаловки тогого же размера как и текст и не жирные
\ESKDsectStyle{section}{\normalsize \bfseries}
\ESKDsectStyle{subsection}{\normalsize \bfseries}
\ESKDsectStyle{subsubsection}{\normalsize \bfseries}